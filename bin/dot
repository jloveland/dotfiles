#!/bin/sh
#
# dot
#
# `dot` handles updates things like that. Run it periodically
# to make sure you're on the latest and greatest.
export DOT="$HOME/.dotfiles"

# Update freshshell and freshen sources
fresh update

# Update homebrew and Install homebrew packages
echo "Updating homebrew and Installing homebrew packages"
brew bundle $DOT/Brewfile 
brew update && brew cleanup && brew upgrade